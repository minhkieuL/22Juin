<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    
      <context-param>
        <param-name>pilotejdbc</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
     
    <context-param>
        <param-name>urlconnexionjdbc</param-name>
        <param-value>jdbc:mysql://localhost:3306/mariage</param-value>
    </context-param>
   <!--Ã©couteurs -->
    <listener>
        <listener-class>database.InitConnexion</listener-class>
    </listener>    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet-mapping>
        <servlet-name>ServletInvite</servlet-name>
        <url-pattern>/ServletInvite/listeInvite</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ServletInvite</servlet-name>
        <url-pattern>/ServletInvite/ajouterInvite</url-pattern>
    </servlet-mapping>
    
    
</web-app>
